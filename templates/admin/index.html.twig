{% extends 'base.html.twig' %}

{% block title %}Hola AdminController!{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <h1 align="center">Administraci√≥n de usuarios</h1><a class="btn btn-info create-user" href="{{ path('app_create') }}">Crear usuario</a><br>
        <div align="center" class="centro">
        {% for user in users %}
            <a href="/admin/{{ user.id }}">{{ user.email }}</a>
            <a class="btn btn-dark edit-user" href="/admin/edit/{{ user.id }}">Editar</a>
            <a class="btn btn-danger delete-user" data-id="{{
            user.id}}">Eliminar usuario:{{ user.id }}</a><br>
        {% endfor %}
    {% endif %}
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/AdminJS.js') }}"></script>
{% endblock %}